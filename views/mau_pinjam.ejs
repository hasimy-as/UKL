<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/semantic.min.css" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <title>Pinjam | Inventaris Sarpra MOKLET</title>
  </head>
  <body>
    <% include navbar %>

    <div class="container">
      <form class="ui form" method="POST" action="auth_pinjam">
        <br />
        <h2 class="ui header text-center">Form Peminjaman Barang</h2>
        <p class="ui dividing header"></p>
        <br />
        <div class="two fields">
          <div class="field">
            <label for="nama">Nama</label>
            <input type="text" name="nama_peminjam" />
          </div>
          <div class="field">
            <label>Kelas</label>
            <select class="ui field dropdown" name="kls_peminjam">
              <option disabled selected value>Pilih Kelas</option>
              <option>X RPL 1</option>
              <option>X RPL 2</option>
              <option>X RPL 3</option>
              <option>X RPL 4</option>
              <option>X RPL 5</option>
              <option>X RPL 6</option>
              <option>X RPL 7</option>
            </select>
          </div>
        </div>
        <div class="field">
          <label>Barang yang dipinjam</label>
          <select class="ui dropdown" name="nama_barang">
            <option disabled selected value>Pilih barang</option>
            <% muncul.forEach(function(show) { %>
            <option><%= show.nama_barang %></option>
            <% }) %>
          </select>
        </div>
        <!-- <div class="five fields">
          <div class="field">
            <label for="jBarang">Jumlah barang</label>
            <input
              type="number"
              min="0"
              name="jmlh_dipinjam"
              placeholder="Jumlah"
              required
            />
          </div>
        </div> -->
        <input
          type="hidden"
          name="wkt_pinjam"
          value="<%var currentTime = new
        Date();%>"
        />

        <div class="field">
          <label for="wKembali">Waktu kembali</label>
          <input type="datetime-local" name="wkt_kembali" required />
        </div>
        <div class="field">
          <label>Alasan pinjam</label>
          <textarea name="alasan"></textarea>
        </div>
        <input type="hidden" name="verifikasi" value="Belum Terverifikasi" />
        <br />
        <input
          class="ui green button"
          type="submit"
          tabindex="0"
          value="Pesan Sekarang!"
        />
      </form>
      <br />
    </div>

    <script src="js/jquery-3.4.1.min.js"></script>

    <script src="js/semantic.js"></script>

    <script>
      $(".ui.dropdown").dropdown();
    </script>
  </body>
</html>
